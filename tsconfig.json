{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "lib": [
            "es2016", "dom"
        ],
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "baseUrl": ".",
        "paths": {
            "*": ["*"],
            "helpers/jest": ["helpers/jest"],
            "helpers/jest/*": ["helpers/jest/*"],
            "helpers/storybook": ["helpers/storybook"],
            "helpers/storybook/*": ["helpers/storybook/*"],
            "helpers/types": ["helpers/types"],
            "helpers/types/*": ["helpers/types/*"]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "incremental": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules"
    ]
}
